{
  "compilerOptions": {
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@api/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "global.d.ts",
    "jest.config.ts",
    "ormconfig.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
